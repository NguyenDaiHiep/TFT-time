package Practice;

public class Array {
	public static int maxArr(int[] a){
		int max = a[0];
		int count = 0;
		for (int i = 0; i < a.length; i++) {
			if(a[i]>max){
				max = a[i];	
				if(max==a[i]){
					count++;
				}
			}
			
			
		}
		return max*count;
	}
	
	public static void main(String[] args) {
		int[] a = {0,5,8,20,-10,20,15,20};
		System.out.println(maxArr(a));
	}

}
